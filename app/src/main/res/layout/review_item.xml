<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorCardViewItem"
    android:orientation="vertical"
    android:padding="@dimen/review_paddng">

    <TextView
        android:id="@+id/tv_review_author"
        style="@style/textViewReviewStyle"
        tools:text="@string/sample_authorName"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textViewStyle"
        tools:text="@string/sample_description"
        android:layout_gravity="center" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/twoDPS"
        android:layout_marginTop="@dimen/fourDPS"
        android:background="@android:color/darker_gray"/>

</LinearLayout>